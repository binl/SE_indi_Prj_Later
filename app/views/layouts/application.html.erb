<!DOCTYPE html>
<html>
<head>
  <title><%= full_title(yield(:title)) %></title>
  <%= stylesheet_link_tag    "application", media: "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <%= render 'layouts/shim'%>
</head>
<body id="my_body">
<%= render 'layouts/header' %>
<div class="container">
  <div style="display: none;" class="notice alert alert-success"><%= notice %></div>
  <%= yield %>
  <%= render 'layouts/footer' %>
</div>
</body>
</html>
